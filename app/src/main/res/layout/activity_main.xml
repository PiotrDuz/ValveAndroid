<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/imageDroid">
    <EditText
            android:layout_width="162dp"
            android:layout_height="83dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/setValve"
            app:layout_constraintStart_toEndOf="@+id/textView2" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="5dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="216dp"
            android:textSize="20sp"/>
    <TextView
            android:text="Ustaw zawor %:"
            android:layout_width="157dp"
            android:layout_height="42dp" android:id="@+id/textView2"
            android:textSize="20sp" android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            android:clickable="false" android:editable="false"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="228dp"/>
    <Button
            android:text="USTAW"
            android:layout_width="121dp"
            android:layout_height="70dp" android:id="@+id/acceptSetValve"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="28dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp"/>
    <EditText
            android:layout_width="158dp"
            android:layout_height="47dp"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/getTemp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" android:clickable="false" android:editable="false"
            android:focusableInTouchMode="false" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp"
            android:textSize="20sp"/>
    <EditText
            android:layout_width="160dp"
            android:layout_height="48dp"
            android:inputType="none|number"
            android:ems="10"
            android:id="@+id/getValve"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp" android:editable="false"
            android:clickable="false" android:focusableInTouchMode="false" android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/getTemp" android:layout_marginTop="32dp"/>
    <EditText
            android:layout_width="225dp"
            android:layout_height="76dp"
            android:inputType="none"
            android:ems="10"
            android:id="@+id/getTime"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" android:clickable="false" android:editable="false"
            android:focusableInTouchMode="false" android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/getValve" android:layout_marginTop="20dp"/>
    <TextView
            android:text="Temperatura C :"
            android:layout_width="162dp"
            android:layout_height="26dp" android:id="@+id/textView3"
            android:clickable="false" android:editable="false" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="84dp" android:textSize="20sp"/>
    <TextView
            android:text="Czas"
            android:layout_width="114dp"
            android:layout_height="27dp" android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="36dp"
            android:textSize="20sp"/>
    <TextView
            android:text="Polozenie % :"
            android:layout_width="174dp"
            android:layout_height="27dp" android:id="@+id/textView4"
            android:clickable="false" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginTop="48dp"
            android:textSize="20sp"/>
    <Button
            android:text="konfiguracja"
            android:layout_width="135dp"
            android:layout_height="34dp" android:id="@+id/configure"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="12dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:textSize="10sp"/>
    <TextView
            android:text="odebrania :"
            android:layout_width="118dp"
            android:layout_height="30dp" android:id="@+id/textView7"
            android:layout_marginTop="2dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp" android:textSize="20sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>