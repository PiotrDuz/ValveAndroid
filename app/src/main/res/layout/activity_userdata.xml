<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:text="login:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:clickable="false" android:editable="false"
    />
    <TextView
            android:text="klucz:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="36dp"
            android:editable="false" android:clickable="false"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/setLogin"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="36dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/setKey"
            app:layout_constraintTop_toBottomOf="@+id/setLogin"
            android:layout_marginTop="12dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"/>
    <Button
            android:text="Akceptuj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/acceptUserData"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" android:layout_marginTop="16dp"/>
    <Button
            android:text="KALIBRUJ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/calibrate"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="28dp" android:layout_marginBottom="168dp"/>
    <TextView
            android:layout_width="191dp"
            android:layout_height="52dp" android:id="@+id/calibrateResponse"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginBottom="168dp" android:focusableInTouchMode="false"
            android:inputType="none"/>
    <TextView
            android:text="Haslo: Dzawor11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/hintpasswd"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginBottom="136dp" android:editable="false"
            android:clickable="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>